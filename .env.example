# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Optional Configuration
# Set MAX_THREAD_HISTORY to control how many messages to retrieve from a thread (default: 10)
MAX_THREAD_HISTORY=10

# Set ALLOWED_CHANNEL to restrict the bot to a specific channel ID
# If not set, the bot will work in all channels where it's invited
# ALLOWED_CHANNEL=C1234567890

# Server Configuration
PORT=8080

# Logging Configuration
# Directory where logs will be stored (default: logs)
LOG_DIR=logs
# Minimum log level to record (default: INFO) - Options: DEBUG, INFO, WARNING, ERROR, CRITICAL 

# Rate Limiting Configuration
# Enable or disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true
# Time window in seconds for user rate limiting (default: 60)
USER_RATE_LIMIT_WINDOW=60
# Maximum number of requests per user in the window (default: 10)
USER_RATE_LIMIT_MAX=10
# Time window in seconds for team rate limiting (default: 60)
TEAM_RATE_LIMIT_WINDOW=60
# Maximum number of requests per team in the window (default: 100)
TEAM_RATE_LIMIT_MAX=100 